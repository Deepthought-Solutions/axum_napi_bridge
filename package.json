{
  "name": "axum_napi_bridge",
  "version": "1.0.0",
  "description": "Bridge to use axum Router from nodejs",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Deepthought-Solutions/axum_napi_bridge.git"
  },
  "license": "MIT",
  "browser": "browser.js",
  "keywords": [
    "napi-rs",
    "NAPI",
    "N-API",
    "Rust",
    "node-addon",
    "node-addon-api"
  ],
  "files": [
    "index.d.ts",
    "index.js",
    "browser.js"
  ],
  "napi": {
    "binaryName": "axum_napi_bridge",
    "targets": [
      "x86_64-unknown-linux-gnu"
    ]
  },
  "engines": {
    "node": ">= 12.22.0 < 13 || >= 14.17.0 < 15 || >= 15.12.0 < 16 || >= 16.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "bench": "cd sample && npm run bench",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "format": "run-p format:prettier format:rs format:toml",
    "format:prettier": "prettier . -w",
    "format:toml": "taplo format",
    "format:rs": "cargo fmt",
    "install-hook": "cp scripts/pre-commit-hook.sh .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit",
    "lint": "run-p lint:js lint:rs",
    "lint:js": "oxlint .",
    "lint:rs": "cargo clippy --workspace -- -D warnings",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "cd sample && npm test",
    "version": "napi version"
  },
  "devDependencies": {
    "@emnapi/core": "^1.4.5",
    "@emnapi/runtime": "^1.4.5",
    "@napi-rs/cli": "^3.0.3",
    "@oxc-node/core": "^0.0.32",
    "@taplo/cli": "^0.7.0",
    "@tybys/wasm-util": "^0.10.0",
    "chalk": "^5.4.1",
    "npm-run-all2": "^8.0.4",
    "oxlint": "^1.8.0",
    "prettier": "^3.6.2",
    "tinybench": "^5.0.0",
    "typescript": "^5.8.3"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "packageManager": "yarn@4.9.4",
  "directories": {
    "example": "example"
  },
  "author": "Nicolas Karageuzian",
  "bugs": {
    "url": "https://github.com/Deepthought-Solutions/axum_napi_bridge/issues"
  },
  "homepage": "https://github.com/Deepthought-Solutions/axum_napi_bridge#readme"
}
