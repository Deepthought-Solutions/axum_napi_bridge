{
  "name": "example-axum-app",
  "version": "0.1.0",
  "description": "An example Axum app using the axum-napi-bridge.",
  "main": "index.cjs",
  "type": "module",
  "scripts": {
    "build": "napi build --release",
    "build:passenger-test": "docker build -f Dockerfile.passenger -t axum-napi-passenger . && docker build -f Dockerfile.apache -t axum-napi-apache .",
    "format": "prettier . -w && cargo fmt",
    "lint": "oxlint . && cargo clippy -- -D warnings",
    "test": "playwright test tests/bridge.spec.ts",
    "test:e2e": "playwright test tests/example.spec.mjs",
    "test:passenger": "npm run build:passenger-test && playwright test --config=playwright.passenger.config.mjs",
    "test:passenger:apache": "npm run build:passenger-test && playwright test --config=playwright.apache.config.mjs",
    "bench": "npx tsc benchmark/bridge_bench.ts benchmark/express_server.ts benchmark/koa_server.ts --outDir benchmark --target es2022 --module es2022 --esModuleInterop --skipLibCheck --moduleResolution node && node benchmark/bridge_bench.js",
    "bench:concurrent": "node benchmark/concurrent_bench.mjs"
  },
  "dependencies": {
    "@napi-rs/cli": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/koa": "^3.0.0",
    "express": "^5.1.0",
    "koa": "^3.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "node-fetch": "^3.3.2",
    "oxlint": "^1.8.0",
    "prettier": "^3.6.2",
    "tinybench": "^2.4.0",
    "ts-node": "^10.9.1",
    "tsx": "^4.0.0",
    "typescript": "^5.2.2"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  }
}
